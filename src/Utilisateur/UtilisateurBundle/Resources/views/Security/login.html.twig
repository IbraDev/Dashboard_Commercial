{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
<div id="wrapper">

    <div class="user-icon"></div>
    <div class="pass-icon"></div>

<form action="{{ path("fos_user_security_check") }}" method="post"  class="login-form">
    <div class="header">
        <img src="/Dashboardv1/web/bundles/AccueilTemplate/images/suivilogo.png">
         <span></span>
    </div>
    <div class="content" align="center">
    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />


    <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" class="input username" />


    <input type="password" id="password" name="_password" required="required" class="input password" />
    </div>

    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
    <label for="remember_me" class="label-remebre">{{ 'security.login.remember_me'|trans }}</label>
    <div class="footer">
        <center><input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" class="button"/></center>
        </div>
</form>
    </div>
{% endblock fos_user_content %}

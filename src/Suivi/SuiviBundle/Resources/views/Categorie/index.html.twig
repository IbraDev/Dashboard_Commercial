{% extends '::base.html.twig' %}
{% block body %}
     {% include 'SuiviVenteBundle::header.html.twig' %}
      {% include 'SuiviVenteBundle::colonne-gauche.html.twig' %}


      <!-- Content Wrapper. Contains page content -->
      <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
          <h1>
          Gestion Catégories
            
          </h1>
          <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Accueil</a></li>
            <li class="active">Gestion Catégories</li>
            <li class="active">Lister</li>
          </ol>
        </section>

        <!-- Main content -->
        <section class="content">
          <div class="row">
            <div class="col-xs-12">
              <div class="box">
                <div class="box-header">
                  <h3 class="box-title">Liste Catégories</h3>
                </div><!-- /.box-header -->
                <div class="box-body">
                  <table id="example1" class="table table-bordered table-striped">
                    <thead>
                      <tr>
                        <th>Id</th>
                        <th>Nom</th>
                        <th>Description</th>
                        <th>Date création</th>
                        <th>Actions</th>
                      </tr>
                    </thead>
                    <tbody>
                      {% for entity in entities %}
                      <tr>
                        <td><a href="{{ path('categorie_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                        <td>{{ entity.nom }}</td>
                        <td>{{ entity.description }}</td>
                        <td>{% if entity.dateCreation %}{{ entity.dateCreation|date('Y-m-d') }}{% endif %}</td>
                        <td>
                    
                        <a href="{{ path('categorie_show', { 'id': entity.id }) }}"> <img src="{{asset("bundles/adminTemplate/img/detail.png")}}"></a>
                    
                    
                        <a href="{{ path('categorie_edit', { 'id': entity.id }) }}"> <img src="{{asset("bundles/adminTemplate/img/edit.png")}}"></a>
                    
                </td>
                      </tr>
                     
                       {% endfor %}
                    </tbody>
                  
                  </table>
                  </br>  
            <a href="{{ path('categorie_new') }}">
              <img src="{{asset("bundles/adminTemplate/img/add2.jpg")}}">
            </a>
        
                </div><!-- /.box-body -->
              </div><!-- /.box -->
            </div><!-- /.col -->
          </div><!-- /.row -->
	</section>
 </div>		  
         {% include 'SuiviVenteBundle::footer.html.twig' %}   
    {% endblock %} 
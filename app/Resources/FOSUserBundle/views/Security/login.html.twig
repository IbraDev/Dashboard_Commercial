{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
      <div id="wrapper">

            <!--SLIDE-IN ICONS-->
            <div class="user-icon"></div>
            <div class="pass-icon"></div>
{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path("fos_user_security_login") }}" class="login-form" method="post">
     <div class="header">
                    <!--TITLE--><img src={{asset ('bundles/AccueilTemplate/images/suivilogo.png')}}>
                    <!--END TITLE-->
                    <!--DESCRIPTION--><span></span><!--END DESCRIPTION-->
                </div>
                    <div class="content" align="center">
    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

    
    <input type="text" id="username" name="_username" class="input username" value="{{ last_username }}" required="required" /></br>

  
    <input type="password" id="password" name="_password" class="input password" required="required" />
 </div>
    
     <div class="footer">
    <input type="submit" id="_submit" name="_submit" class="button" value="{{ 'security.login.submit'|trans }}" />
     </div>
</form>
      </div>
{% endblock fos_user_content %}
